<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <!-- Header  Starts -->

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/letter_head"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <!-- Logo Start -->
<RelativeLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginRight="23dp">
        <ImageView
            android:id="@+id/back_to_homepage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:contentDescription="@string/hello"
            android:src="@drawable/back_button" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/hello"
            android:src="@drawable/m"
            android:id="@+id/logo" />
        
        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logo"
        android:layout_toRightOf="@+id/back_to_homepage"
        android:gravity="center"
        android:text="@string/MyVisit"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="monospace" />
        
     </RelativeLayout>   
        
        <!-- Logo Ends -->
    </LinearLayout>
    <!-- Header Ends -->
    <!-- Footer Start -->


    <!-- Footer Ends -->


    <!-- Main Form -->
    
    <!-- Main Form Ends -->

<LinearLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal"
    android:background="@drawable/letter_tail" >


</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header"
    android:background="@drawable/letter_middle"
    android:orientation="vertical" >

<ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

</ListView>
  </LinearLayout>  
</RelativeLayout>